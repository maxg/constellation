{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_source_ami": "",
    "aws_instance_type": "",
    
    "openstack_auth_url": "",
    "openstack_username": "",
    "openstack_password": "",
    "openstack_tenant": "",
    "openstack_region": "",
    "openstack_source_image": "",
    "openstack_flavor": "",
    "openstack_secgroup": "",
    
    "rev": null,
    "tar": null,
    "app": null
  },
  
  "builders": [ {
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "ami_name": "{{user `app`}}-{{isotime \"0601021504\"}}-{{user `rev`}}",
    "tags": {
      "Name": "{{user `app`}} {{isotime \"0601021504\"}} {{user `rev`}}",
      "Packer": "{{user `app`}}"
    },
    "source_ami_filter": {
      "filters": {
        "name": "ubuntu/images/hvm-ssd/ubuntu-*-{{user `aws_ubuntu_release`}}-amd64-server-*"
      },
      "owners": [ "099720109477" ], "most_recent": true
    },
    "instance_type": "{{user `aws_instance_type`}}",
    "ssh_username": "ubuntu"
  }, {
    "type": "openstack",
    "username": "{{user `openstack_username`}}",
    "password": "{{user `openstack_password`}}",
    "tenant_name": "{{user `openstack_tenant`}}",
    "identity_endpoint": "{{user `openstack_auth_url`}}",
    "region": "{{user `openstack_region`}}",
    "image_name": "{{user `app`}}-{{timestamp}}-{{user `rev`}}",
    "source_image": "{{user `openstack_source_image`}}",
    "flavor": "{{user `openstack_flavor`}}",
    "security_groups": "{{user `openstack_secgroup`}}",
    "ssh_username": "ubuntu"
  } ],
  
  "provisioners": [ {
    "type": "file",
    "source": "{{user `tar`}}",
    "destination": "/tmp/{{user `app`}}.tar"
  }, {
    "type": "shell",
    "script": "setup/production-pack.sh",
    "environment_vars": [ "APP={{user `app`}}" ],
    "execute_command": "{{.Vars}} ADMIN=`whoami` sudo -E sh -c {{.Path}}"
  } ]
}
