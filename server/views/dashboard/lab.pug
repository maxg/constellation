extends ../layout

append head
  title Remote Lab - Constellation

block content
  .row: .col-xs-12
    h2 #{project}: #{username}
      br
      small remote lab #[span#connection-status.label]
  
  .row: .col-xs-12: #error.alert.alert-danger
  
  .row: .col-xs-12
    h3 Shared scratchpad
      small#scratch-connections
    textarea#scratch.form-control.text-editor(rows=8)
  
  .row: .col-xs-12
    h3 Eclipse files
    ul#file-tabs.nav.nav-tabs
    #file-panes.tab-content
  
  template#file-tab
    li: a(data-toggle='tab'): h4
      span.glyphicon.glyphicon-asterisk.invisible.file-indicator
      span.filename
      small
  
  template#file-pane
    div.tab-pane.panel.panel-default: .panel-body: pre.code: code.java
  
  script.
    var shareURL = !{JSON.stringify(shareURL)};
    var project = !{JSON.stringify(project)};
    var username = !{JSON.stringify(username)};
  script(src='/public/sharedb.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.6.0/highlight.min.js')
  script(src='/static/dashboard/lab.js')
  script(src='/static/connected.js')
