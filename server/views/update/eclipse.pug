extends ../layout

append head
  title Update Plug-in - Constellation

block content
  .row: .col-xs-12
    h1 Update Constellation #[small from #{oldversion} to #{version}]
    ol
      li: h2 Eclipse #[span.glyphicon.glyphicon-arrow-right] Help menu #[span.glyphicon.glyphicon-arrow-right] Installation Details
      li: h2 In the &ldquo;Installed Software&rdquo; list,
        br
        | select #[span.bg-danger Constellation]
      li: h2 Click Update...
      li: h2 #[span.glyphicon.glyphicon-time] ... wait
      li: h2 Click Next
      li: h2 Select #[span.glyphicon.glyphicon-record] I accept the terms
      li: h2 Click Finish
      li: h2 #[span.glyphicon.glyphicon-time] ... wait
      li: h2 &ldquo;Warning: installing unsigned content&rdquo;
        br
        | Click OK
      li: h2 &ldquo;Would you like to restart now?&rdquo;
        br
        | Click Yes
